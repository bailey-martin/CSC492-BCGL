<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BCGL.Views.ScannerPage">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <CollectionView x:Name="collectionView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="5" HasShadow="False" BorderColor="Black">
                                <StackLayout>
                                    <Label Text="{Binding Path=SKU, StringFormat='SKU: {0}'}"
                                           FontSize="Medium" />
                                    <Label Text="{Binding Path=ProductName, StringFormat='Product: {0}'}"
                                           FontSize="Medium" />
                                    <Label Text="{Binding Path=Price,StringFormat='{0:C2}'}"
                                           FontSize="Medium" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
             </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>